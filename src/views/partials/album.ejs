<section class="album">
  <div class="album-cover">
    <img class="album-cover-img" src="<%= album.images[0].url %>" alt="">
  </div>
  <div class="album-tracks">
    <h3><%= album.name %></h3>
    <ol class="album-tracks-list">
      <% if(tracks.length !== 0) { %>
        <% tracks.forEach((track) => { %>
          <li class="album-tracks-item">
            <a href=""><%=track.name %></a>
          </li>
        <% }) %>
      <% } %>
    </ol>
  </div>
  <div class="album-controls">
    <!-- <div class="album-controls-play"> -->
    <a id="<%= album.uri %>" class="play album-controls-play controls-btn" href="#play">
      play
    </a>

    <a id="<%= album.uri %>" class="pause album-controls-play controls-btn invisible" href="#pause">
      pause
    </a>
    <!-- </div> -->
  </div>
</section>
